{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn -k uvicorn.workers.UvicornWorker backend.main:app --bind 0.0.0.0:8000 --workers 4 --timeout 120",
    "healthcheckPath": "/signals",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "MONGODB_URI": "${{MONGODB_URI}}",
    "MONGODB_DB": "agrisignals",
    "OPENAI_API_KEY": "${{OPENAI_API_KEY}}",
    "FIRECRAWL_API_KEY": "${{FIRECRAWL_API_KEY}}"
  }
}

